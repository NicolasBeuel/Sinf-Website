<header>
    <a class="logoHeader" href="/"><img src="/img/logo.png" alt="Logo du site"></a>
    <input id= "searchBar" class="form-control" type="search" name="search" placeholder="Search ...">

    <% if (locals.fullname) { %>
    <!-- CONNECTED -->
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= fullname %>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/editPersoPage">Edit perso page</a>
            <a class="dropdown-item" href="/disconnection">Disconnect</a>
        </div>
    </div>
    <% }else{ %>
    <!-- NOT CONNECTED -->
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
        </button>
        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
            <form class="px-4 py-3" action="/login" method="post">
                <div class="form-group">
                    <label for="DropdownFormEmail1">Email address</label>
                    <input name="email" type="email" class="form-control" id="DropdownFormEmail1" required>
                </div>
                <div class="form-group">
                    <label for="DropdownFormPassword1">Password</label>
                    <input name="password" type="password" class="form-control" id="DropdownFormPassword1" required>
                </div>
                <button type="submit" class="btn btn-secondary">Sign in</button>
            </form>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/loginSignup">New around here? Sign up</a>
            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#Modal" style="width: 80%; margin:0 10%; margin-top: 10px;">Forgot password?</button><!-- button for modal -->
        </div>
    </div>
    <% } %>
</header>

<!-- MODAL BOOTSTRAP -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Forgot password ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Forgotten password? No problem, enter your email address here and a link will be sent to you so you can modify it.
                <div id="newPsswrdAlertSucces" style="display: none" class="alert alert-success" role="alert"></div>
                <div id="newPsswrdAlertError"  style="display: none" class="alert alert-danger" role="alert"></div>
                    <div class="form-group">
                        <label for="newPsswrdEmail" class="col-form-label">E-mail</label>
                        <input type="text" class="form-control" id="newPsswrdEmail">
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                <button id="newPsswrdBtn" type="button" class="btn btn-secondary">Send message</button>
            </div>
        </div>
    </div>
</div>
<!-- END MODAL -->

<!-- COOKIE -->
<%if(cookie === undefined && locals.fullname === undefined){%>
<div class="cookieAlert alert alert-secondary" role="alert">
    By browsing this site, you accept the use of cookies.
    <button id="cookieBtn" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<%}%>